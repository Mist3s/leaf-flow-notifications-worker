# =========================
# Redis (Celery broker/backend)
# =========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_BROKER_DB=0
REDIS_BACKEND_DB=1

# Optional: full URLs (if you prefer explicit)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =========================
# Celery
# =========================
CELERY_WORKER_CONCURRENCY=2
CELERY_LOG_LEVEL=INFO
CELERY_QUEUE=notifications

# Visibility timeout must be > max task duration (seconds)
CELERY_VISIBILITY_TIMEOUT=1800

# =========================
# Telegram Bot
# =========================
TELEGRAM_BOT_TOKEN=put-your-bot-token-here

# Default admin chat/group where notifications should go
# (used if payload.admin_chat_id is null)
ADMIN_CHAT_ID=0

# =========================
# HTTP / timeouts
# =========================
TELEGRAM_HTTP_TIMEOUT_SECONDS=10
TELEGRAM_HTTP_CONNECT_TIMEOUT_SECONDS=5

# =========================
# Cloudinary (image transformations)
# =========================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# =========================
# S3 (variant uploads)
# =========================
S3_ENDPOINT_URL=https://s3.storage.selcloud.ru
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_BUCKET=leaf-flow-media
S3_REGION=ru-1

# =========================
# LeafFlow Internal API
# =========================
LEAFFLOW_API_URL=https://api.leafflow.ru
LEAFFLOW_INTERNAL_TOKEN=your_internal_bot_token
